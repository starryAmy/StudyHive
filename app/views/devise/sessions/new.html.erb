<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-10 col-sm-8 col-md-6 col-lg-4 my-5 p-3 bg-light">
      <h2><strong>Log in</strong></h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
        <div class="d-flex align-items-center justify-content-between">
          <%= f.input :remember_me, wrapper_html: { class: "no-margin-bottom" }, as: :boolean if devise_mapping.rememberable? %>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "mb-3 ms-auto" %><br />
          <% end %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn log-in-button mb-2 w-100" %>
      </div>
      <% end %>

      <% if devise_mapping.omniauthable? %>
      <% resource_class.omniauth_providers.each do |provider| %>
      <% button_classes = "btn my-2 w-100" %>
      <% if provider.to_s == "line" %>
      <% button_classes += " line-button d-flex align-items-center justify-content-center" %>
      <% end %>

      <%= button_to omniauth_authorize_path(resource_name, provider),
                  data: { turbo: false },
                  class: button_classes do %>
      <% if provider.to_s == "line" %>
      <%= render "shared/svgs/line" %>
      <% end %>
      Log in with <%= OmniAuth::Utils.camelize(provider) %>
      <% end %><br />
      <% end %>
      <% end %>
    </div>
  </div>
</div>
