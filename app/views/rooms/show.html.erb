<%= turbo_stream_from "room_#{@room.id}_chatmessages" %>
<%= turbo_stream_from "room_#{@room.id}_resources/#{@participant_type}" %>

<% if @spot_current_user.present? %>
  <div data-controller="user-activity" data-user-activity-url-value="<%= spot_path(@spot_current_user) %>"></div>
<% end %>

<div class="container">
  <div class="d-flex my-3 flex-column">
    <div class="d-flex flex-row align-items-center">
      <h1 style="filter: grayscale(100%)">ğŸ <%= @room.title %></h1>
      <div class="room-show-status"><%= @room.public ? "Publicãƒ»" : "Privateãƒ»" %><%= @room.spots.size %> members</div>
        <% if current_user != @room.user %>
        <% unless @spot_current_user %>
          <%= button_to "Subscribe this Hive!", spots_path(spot: { status: :accepted, active: true, room_id: @room.id, user_id: current_user.id }, redirect: room_path(@room)), method: :post, class: "room-show-btn" %>
        <% else @spot_current_user %>
          <%= button_to "Unsubsribe this Hive!", spot_path(@spot_current_user, redirect: room_path(@room)), method: :delete, class: "room-show-btn", data: { confirm: "Are you sure you want to leave this room?" } %>
        <% end %>
        <% end %>
    </div>
    <div class="room-show-user-description">
      <div class="room-show-user d-flex flex-row">
        <p class="mr-5">Owned by: <%=link_to @room.user.username, desk_path(@room.user) %></p>
        <p class="honey-icon">ğŸ¯</p>
      </div>
      <div class="mt-0 pt-o">
        <p style="color: grey"><%= @room.description %></p>
      </div>
    </div>

  </div>
  <div class="row">
    <!-- Left side: 7-column flexbox -->
    <div class="col-7 d-flex flex-column">
      <div class="room-show-index mb-3">
        <%= render "youtube" %>
      </div>

      <div class="tabs">
        <%= render "tabs" %>
      </div>
    </div>

    <!-- Right side: 5-column -->
      <div class="col-5">
        <%= render "roomchat" %>
      </div>
  </div>
</div>
