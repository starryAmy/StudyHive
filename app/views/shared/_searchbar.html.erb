<div class="search-container">
  <%= form_with url: path, method: :get, data: { turbo_stream: true }, local: false, class: "search-form" do %>
    <select name="search_type" class="search-select">
      <option value="title" <%= "selected" if params[:search_type].nil? || params[:search_type] == "title" %>><%= title_name %></option>
      <option value="user" <%= "selected" if params[:search_type] == "user" %>><%= user_name %></option>
    </select>
    <%= text_field_tag :query, params[:query], placeholder: "  Search by title or username...", class: "search-input" %>
    <%= submit_tag "🔍", class: "search-button" %>
  <% end %>
</div>
