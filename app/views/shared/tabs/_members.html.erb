
<div class="d-grid member-tab-container" style="grid-template-columns: repeat(auto-fit, minmax(80px, 1fr)); gap: 8px;">
  <% @room.spots.each do |spot| %>
    <% if spot.user&.last_online_at.present? %>
      <% time_difference = Time.current - spot.user.last_online_at %>
      <% online_status = time_difference < 30.minutes %>
    <% else %>
      <% online_status = false %>
    <% end %>

    <div class="text-center" style="padding: 0; overflow: hidden; height: 50px; display: flex; flex-direction: column; align-items: center; justify-content: center; line-height: 1;">
      <div style="margin-bottom: 4px;">
        <span style="font-size: 24px; line-height: 1; <%= online_status ? '' : 'filter: grayscale(100%)' %>">🐝</span>
      </div>
      <div style="font-size: 14px;"><%= spot.user.username %></div>
    </div>
  <% end %>
</div>
